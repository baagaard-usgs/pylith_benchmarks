# ----------------------------------------------------------------------
# Refine cells near rupture
# ----------------------------------------------------------------------

# Refine level 1

# Main fault
group "refinecells" add node with x_min >= {-refine1Width} and x_max <= {refine1Width} and y_min >= {-refine1Length} and y_max <= {refine1Length}

# Branch fault
group "tmp_add" add node with y_coord + x_coord*{tand(branchAngle)} - {branchOffsetY} >= 0
group "tmp_add" remove node with y_coord + x_coord*{tand(branchAngle)} - {branchOffsetY} - {(branchLength+refine1Length)*(cosd(branchAngle)+sind(branchAngle)*tand(branchAngle))} >= 0
group "tmp_add" remove node with y_coord - x_coord/{tand(branchAngle)} - {branchOffsetY} + {refine1Width*(sind(branchAngle)+cosd(branchAngle)/tand(branchAngle))} <= 0
group "tmp_add" remove node with y_coord - x_coord/{tand(branchAngle)} - {branchOffsetY} - {refine1Width*(sind(branchAngle)+cosd(branchAngle)/tand(branchAngle))} >= 0
group "refinecells" add node in group tmp_add
delete group tmp_add

refine node in group refinecells depth 1
delete group refinecells

# Refine level 2

# Main fault
group "refinecells" add node with x_min >= {-refine2Width} and x_max <= {refine2Width} and y_min >= {-refine2Length} and y_max <= {refine2Length}

# Branch fault
group "tmp_add" add node with y_coord + x_coord*{tand(branchAngle)} - {branchOffsetY} >= 0
group "tmp_add" remove node with y_coord + x_coord*{tand(branchAngle)} - {branchOffsetY} - {(branchLength+refine2Length)*(cosd(branchAngle)+sind(branchAngle)*tand(branchAngle))} >= 0
group "tmp_add" remove node with y_coord - x_coord/{tand(branchAngle)} - {branchOffsetY} + {refine2Width*(sind(branchAngle)+cosd(branchAngle)/tand(branchAngle))} <= 0
group "tmp_add" remove node with y_coord - x_coord/{tand(branchAngle)} - {branchOffsetY} - {refine2Width*(sind(branchAngle)+cosd(branchAngle)/tand(branchAngle))} >= 0
group "refinecells" add node in group tmp_add
delete group tmp_add

refine node in group refinecells depth 1
delete group refinecells
