# ----------------------------------------------------------------------
# Create tet4 mesh at 100m resolution.
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
# Set parameters.
# ----------------------------------------------------------------------
playback 'params.jou'

# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry.jou'

# ----------------------------------------------------------------------
# Set discretization size and scheme
# ----------------------------------------------------------------------
volume all size {16*dx}
volume all scheme tetmesh 

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
mesh volume all

# ----------------------------------------------------------------------
# Refine cells near rupture
# ----------------------------------------------------------------------
playback 'refinecells.jou'

# Refine to get final resolution
refine volume all numsplit 1

# ----------------------------------------------------------------------
# Smooth mesh to improve quality
# ----------------------------------------------------------------------
playback 'tet4_smooth.jou'

# ----------------------------------------------------------------------
# Setup boundary conditions.
# ----------------------------------------------------------------------
playback 'createbc.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "tet4_100m.exo" dimension 3 overwrite







